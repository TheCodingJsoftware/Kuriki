{
    "hosting": {
        "site": "kuriki",
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [{
            "source": "**/*.xml",
            "headers": [
                { "key": "Content-Type", "value": "application/xml; charset=utf-8" }
            ]
        }]
    }
}